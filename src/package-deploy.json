{
  "name": "oleg-portfolio",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Современный адаптивный сайт-портфолио с CMS панелью управления",
  "author": "Олег Кононенко <Lespola76@gmail.com>",
  "license": "MIT",
  "keywords": [
    "portfolio",
    "react",
    "typescript",
    "tailwind",
    "cms",
    "blog",
    "responsive"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/olegproektor/portfolio.git"
  },
  "homepage": "https://olegproektor.github.io/portfolio",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "predeploy": "npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "7.55.0",
    "motion": "^1.0.0",
    "lucide-react": "^0.400.0",
    "sonner": "2.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "gh-pages": "^6.0.0",
    "prettier": "^3.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}